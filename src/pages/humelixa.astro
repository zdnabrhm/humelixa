<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Humelixa</title>
    <meta
      name="description"
      content="From strategy to purchase to hands-off management. Expert guidance for international professionals building wealth through German residential real estate."
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400&family=Source+Serif+Pro:ital,wght@0,400;0,500;0,600;1,400&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --color-bg-primary: #0a0a0a;
        --color-bg-surface: #121212;
        --color-bg-elevated: #1a1a1a;
        --color-text-primary: #f5f5f5;
        --color-text-secondary: #a0a0a0;
        --color-text-muted: #666666;
        --color-gold: #c9a962;
        --color-gold-light: #d4b978;
        --color-gold-dark: #b8944d;
        --color-bronze: #8b7355;
        --color-success: #2d5a3d;
        --color-border: rgba(201, 169, 98, 0.2);
        --font-display: "Playfair Display", Georgia, serif;
        --font-body: "Source Serif Pro", Georgia, serif;
        --font-mono: "IBM Plex Mono", monospace;
        --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
        --transition-bounce: cubic-bezier(0.34, 1.56, 0.64, 1);
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        scroll-behavior: smooth;
        font-size: 16px;
      }

      body {
        font-family: var(--font-body);
        background-color: var(--color-bg-primary);
        color: var(--color-text-primary);
        line-height: 1.7;
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Marble Texture Overlay */
      .marble-texture {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 9999;
        opacity: 0.03;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
      }

      /* Typography */
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: var(--font-display);
        font-weight: 500;
        line-height: 1.2;
        letter-spacing: -0.02em;
      }

      h1 {
        font-size: clamp(2.5rem, 6vw, 4.5rem);
        font-weight: 400;
      }

      h2 {
        font-size: clamp(2rem, 4vw, 3rem);
      }

      h3 {
        font-size: clamp(1.5rem, 2.5vw, 1.75rem);
      }

      .mono {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
      }

      /* Gold Foil Line */
      .gold-line {
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent,
          var(--color-gold),
          transparent
        );
        width: 100%;
        max-width: 200px;
        margin: 2rem auto;
      }

      .gold-line-left {
        height: 1px;
        background: linear-gradient(90deg, var(--color-gold), transparent);
        width: 120px;
        margin-bottom: 1.5rem;
      }

      /* Container */
      .container {
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      /* Navigation */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 1.5rem 2rem;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: linear-gradient(
          180deg,
          rgba(10, 10, 10, 0.95) 0%,
          rgba(10, 10, 10, 0) 100%
        );
        backdrop-filter: blur(10px);
        transition: transform 0.3s var(--transition-smooth);
      }

      .nav-logo {
        font-family: var(--font-display);
        font-size: 1.5rem;
        font-weight: 500;
        color: var(--color-text-primary);
        text-decoration: none;
        letter-spacing: 0.05em;
      }

      .nav-logo span {
        color: var(--color-gold);
      }

      .nav-cta {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        padding: 0.75rem 1.5rem;
        border: 1px solid var(--color-gold);
        color: var(--color-gold);
        background: transparent;
        cursor: pointer;
        transition: all 0.3s var(--transition-smooth);
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }

      .nav-cta:hover {
        background: var(--color-gold);
        color: var(--color-bg-primary);
      }

      /* Hero Section */
      .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 8rem 2rem 4rem;
        position: relative;
        overflow: hidden;
      }

      .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background:
          radial-gradient(
            ellipse at 20% 80%,
            rgba(201, 169, 98, 0.03) 0%,
            transparent 50%
          ),
          radial-gradient(
            ellipse at 80% 20%,
            rgba(201, 169, 98, 0.02) 0%,
            transparent 50%
          );
        z-index: -1;
      }

      .hero-grid {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image:
          linear-gradient(rgba(201, 169, 98, 0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(201, 169, 98, 0.03) 1px, transparent 1px);
        background-size: 100px 100px;
        opacity: 0.5;
        z-index: -1;
      }

      .hero-content {
        text-align: center;
        max-width: 1000px;
        animation: fadeInUp 1s var(--transition-smooth);
      }

      .hero-label {
        display: inline-block;
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-gold);
        letter-spacing: 0.3em;
        text-transform: uppercase;
        margin-bottom: 2rem;
        padding: 0.5rem 1rem;
        border: 1px solid var(--color-border);
      }

      .hero-headline {
        margin-bottom: 1.5rem;
        animation: fadeInUp 1s 0.1s var(--transition-smooth) both;
      }

      .hero-headline em {
        font-style: italic;
        color: var(--color-gold);
      }

      .hero-subhead {
        font-size: clamp(1.1rem, 2vw, 1.3rem);
        color: var(--color-text-secondary);
        max-width: 700px;
        margin: 0 auto 3rem;
        animation: fadeInUp 1s 0.2s var(--transition-smooth) both;
      }

      .hero-cta-group {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        animation: fadeInUp 1s 0.3s var(--transition-smooth) both;
      }

      .btn-primary {
        font-family: var(--font-mono);
        font-size: 0.8rem;
        padding: 1rem 2.5rem;
        background: var(--color-gold);
        color: var(--color-bg-primary);
        border: none;
        cursor: pointer;
        transition: all 0.3s var(--transition-smooth);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        position: relative;
        overflow: hidden;
      }

      .btn-primary::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.2),
          transparent
        );
        transition: left 0.5s;
      }

      .btn-primary:hover::before {
        left: 100%;
      }

      .btn-primary:hover {
        background: var(--color-gold-light);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(201, 169, 98, 0.2);
      }

      .btn-secondary {
        font-family: var(--font-mono);
        font-size: 0.8rem;
        padding: 1rem 2rem;
        background: transparent;
        color: var(--color-text-primary);
        border: 1px solid var(--color-border);
        cursor: pointer;
        transition: all 0.3s var(--transition-smooth);
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }

      .btn-secondary:hover {
        border-color: var(--color-gold);
        color: var(--color-gold);
      }

      .hero-trust {
        margin-top: 4rem;
        animation: fadeInUp 1s 0.4s var(--transition-smooth) both;
      }

      .hero-trust p {
        font-family: var(--font-mono);
        font-size: 0.65rem;
        color: var(--color-text-muted);
        letter-spacing: 0.2em;
        text-transform: uppercase;
        margin-bottom: 1.5rem;
      }

      .trust-logos {
        display: flex;
        justify-content: center;
        gap: 3rem;
        flex-wrap: wrap;
        opacity: 0.5;
      }

      .trust-logo {
        font-family: var(--font-display);
        font-size: 0.9rem;
        color: var(--color-text-secondary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .trust-logo::before {
        content: "‚óÜ";
        color: var(--color-gold);
        font-size: 0.6rem;
      }

      /* Interactive Property Intelligence */
      .property-intelligence {
        position: relative;
        margin-top: 4rem;
        animation: fadeInUp 1s 0.5s var(--transition-smooth) both;
      }

      .pi-container {
        background: var(--color-bg-surface);
        border: 1px solid var(--color-border);
        padding: 2rem;
        max-width: 600px;
        margin: 0 auto;
        position: relative;
      }

      .pi-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--color-border);
      }

      .pi-header h4 {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-gold);
        letter-spacing: 0.2em;
      }

      .pi-sliders {
        display: grid;
        gap: 1.5rem;
      }

      .pi-slider {
        display: grid;
        gap: 0.5rem;
      }

      .pi-slider label {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-text-secondary);
        display: flex;
        justify-content: space-between;
      }

      .pi-slider input[type="range"] {
        width: 100%;
        height: 2px;
        background: var(--color-border);
        outline: none;
        -webkit-appearance: none;
        cursor: pointer;
      }

      .pi-slider input[type="range"]::-webkit-slider-thumb {
        -webkit-appearance: none;
        width: 12px;
        height: 12px;
        background: var(--color-gold);
        border-radius: 50%;
        cursor: pointer;
        transition: transform 0.2s;
      }

      .pi-slider input[type="range"]::-webkit-slider-thumb:hover {
        transform: scale(1.2);
      }

      .pi-result {
        margin-top: 2rem;
        padding: 1.5rem;
        background: rgba(201, 169, 98, 0.05);
        border-left: 2px solid var(--color-gold);
      }

      .pi-result-label {
        font-family: var(--font-mono);
        font-size: 0.65rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 0.5rem;
      }

      .pi-result-value {
        font-family: var(--font-display);
        font-size: 2rem;
        color: var(--color-gold);
      }

      .pi-result-note {
        font-size: 0.85rem;
        color: var(--color-text-secondary);
        margin-top: 0.5rem;
      }

      /* Section Styles */
      section {
        padding: 8rem 2rem;
        position: relative;
      }

      .section-header {
        text-align: center;
        margin-bottom: 5rem;
      }

      .section-label {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-gold);
        letter-spacing: 0.3em;
        text-transform: uppercase;
        margin-bottom: 1rem;
      }

      .section-title {
        max-width: 800px;
        margin: 0 auto;
      }

      /* Problem/Solution Section */
      .narrative {
        background: linear-gradient(
          180deg,
          var(--color-bg-primary) 0%,
          var(--color-bg-surface) 50%,
          var(--color-bg-primary) 100%
        );
      }

      .narrative-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .narrative-card {
        padding: 3rem;
        background: var(--color-bg-surface);
        border: 1px solid var(--color-border);
        position: relative;
        overflow: hidden;
        transition: all 0.4s var(--transition-smooth);
      }

      .narrative-card:hover {
        transform: translateY(-5px);
        border-color: var(--color-gold);
      }

      .narrative-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 2px;
        height: 0;
        background: var(--color-gold);
        transition: height 0.4s var(--transition-smooth);
      }

      .narrative-card:hover::before {
        height: 100%;
      }

      .narrative-number {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-gold);
        margin-bottom: 1.5rem;
        letter-spacing: 0.1em;
      }

      .narrative-card h3 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
      }

      .narrative-card p {
        color: var(--color-text-secondary);
        font-size: 1rem;
      }

      .scenario-visual {
        margin-top: 2rem;
        padding: 1.5rem;
        background: var(--color-bg-elevated);
        border: 1px dashed var(--color-border);
      }

      .scenario-title {
        font-family: var(--font-mono);
        font-size: 0.65rem;
        color: var(--color-text-muted);
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }

      .scenario-content {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .scenario-icon {
        width: 40px;
        height: 40px;
        border: 1px solid var(--color-gold);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
      }

      .scenario-text {
        font-size: 0.9rem;
      }

      /* Services Section */
      .services {
        background: var(--color-bg-surface);
      }

      .services-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1px;
        background: var(--color-border);
        max-width: 1200px;
        margin: 0 auto;
        border: 1px solid var(--color-border);
      }

      .service-card {
        background: var(--color-bg-surface);
        padding: 3rem 2rem;
        transition: all 0.3s var(--transition-smooth);
        position: relative;
      }

      .service-card:hover {
        background: var(--color-bg-elevated);
      }

      .service-icon {
        width: 50px;
        height: 50px;
        border: 1px solid var(--color-gold);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
      }

      .service-card h3 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
      }

      .service-card p {
        color: var(--color-text-secondary);
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
      }

      .service-features {
        list-style: none;
      }

      .service-features li {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--color-text-muted);
        padding: 0.5rem 0;
        border-bottom: 1px solid var(--color-border);
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .service-features li::before {
        content: "‚Üí";
        color: var(--color-gold);
      }

      /* Portfolio Showcase */
      .portfolio {
        background: var(--color-bg-primary);
      }

      .portfolio-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .property-card {
        background: var(--color-bg-surface);
        border: 1px solid var(--color-border);
        overflow: hidden;
        transition: all 0.4s var(--transition-smooth);
        cursor: pointer;
      }

      .property-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: var(--color-gold);
      }

      .property-image {
        height: 250px;
        background: linear-gradient(
          135deg,
          var(--color-bg-elevated) 0%,
          #2a2a2a 100%
        );
        position: relative;
        overflow: hidden;
      }

      .property-image::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          180deg,
          transparent 50%,
          rgba(10, 10, 10, 0.8) 100%
        );
      }

      .property-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        font-family: var(--font-mono);
        font-size: 0.6rem;
        padding: 0.4rem 0.8rem;
        background: var(--color-gold);
        color: var(--color-bg-primary);
        z-index: 1;
        letter-spacing: 0.1em;
      }

      .property-stats {
        position: absolute;
        bottom: 1rem;
        right: 1rem;
        z-index: 1;
        display: flex;
        gap: 1.5rem;
      }

      .property-stat {
        text-align: right;
      }

      .property-stat-value {
        font-family: var(--font-display);
        font-size: 1.25rem;
        color: var(--color-text-primary);
      }

      .property-stat-label {
        font-family: var(--font-mono);
        font-size: 0.6rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }

      .property-content {
        padding: 2rem;
      }

      .property-location {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-gold);
        letter-spacing: 0.1em;
        margin-bottom: 0.5rem;
      }

      .property-title {
        font-size: 1.3rem;
        margin-bottom: 1rem;
      }

      .property-details {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .property-detail {
        font-size: 0.85rem;
        color: var(--color-text-secondary);
      }

      .property-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .property-tag {
        font-family: var(--font-mono);
        font-size: 0.65rem;
        padding: 0.3rem 0.6rem;
        border: 1px solid var(--color-border);
        color: var(--color-text-muted);
      }

      /* Testimonials */
      .testimonials {
        background: linear-gradient(
          180deg,
          var(--color-bg-surface) 0%,
          var(--color-bg-primary) 100%
        );
      }

      .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .testimonial-card {
        padding: 2.5rem;
        background: var(--color-bg-surface);
        border: 1px solid var(--color-border);
        transition: all 0.3s var(--transition-smooth);
      }

      .testimonial-card:hover {
        border-color: var(--color-gold);
      }

      .testimonial-quote {
        font-family: var(--font-display);
        font-size: 1.1rem;
        font-style: italic;
        line-height: 1.8;
        margin-bottom: 2rem;
        color: var(--color-text-primary);
      }

      .testimonial-quote::before {
        content: '"';
        font-size: 3rem;
        color: var(--color-gold);
        line-height: 0;
        display: block;
        margin-bottom: -1rem;
        opacity: 0.5;
      }

      .testimonial-author {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .author-avatar {
        width: 50px;
        height: 50px;
        border: 1px solid var(--color-gold);
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: var(--font-display);
        font-size: 1rem;
        color: var(--color-gold);
      }

      .author-info {
        flex: 1;
      }

      .author-name {
        font-family: var(--font-body);
        font-size: 0.95rem;
        font-weight: 600;
      }

      .author-role {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      /* Metrics */
      .metrics {
        padding: 6rem 2rem;
        background: var(--color-bg-elevated);
        border-top: 1px solid var(--color-border);
        border-bottom: 1px solid var(--color-border);
      }

      .metrics-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .metric-item {
        text-align: center;
      }

      .metric-value {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        color: var(--color-gold);
        line-height: 1;
        margin-bottom: 0.5rem;
      }

      .metric-label {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }

      /* Process Section */
      .process {
        background: var(--color-bg-primary);
      }

      .process-timeline {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
      }

      .process-timeline::before {
        content: "";
        position: absolute;
        left: 30px;
