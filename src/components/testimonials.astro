---
import TestimonialCard from "./testimonial-card.astro";

const testimonials = [
  {
    quote:
      "As an American expat, I was told my foreign income would limit my borrowing capacity. Humelixa restructured my application and secured financing at 85% LTV—the same rate German citizens receive.",
    name: "Sarah Mitchell",
    role: "Product Director, Tech Unicorn",
  },
  {
    quote:
      "I wanted passive income without becoming a landlord in a country I don't live in. Humelixa sourced the property, arranged management, and now I receive monthly reports while focusing on my Dubai-based business.",
    name: "Ahmed Khalil",
    role: "Founder, Consulting Firm",
  },
  {
    quote:
      "The property they recommended in Frankfurt has appreciated 18% in three years while generating consistent rental income. This isn't speculative investing—it's wealth building with German fundamentals.",
    name: "Lisa Wang",
    role: "Investment Banker",
  },
];
---

<section id="testimonials" class="from-card to-background bg-linear-to-b">
  <div class="container">
    <div class="reveal space-y-4 text-center">
      <p class="tagline">Client Stories</p>
      <h2 class="heading-2">
        Professionals who built German wealth <em class="text-gold italic"
          >on their terms</em
        >
      </h2>
      <div class="gold-line"></div>
    </div>

    <div class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {testimonials.map((testimonial) => <TestimonialCard {...testimonial} />)}
    </div>
  </div>
</section>
