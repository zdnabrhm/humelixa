<section
  class="bg-background relative overflow-hidden px-8 py-40 text-center"
  id="consultation"
>
  <!-- Background Glow -->
  <div
    class="pointer-events-none absolute top-1/2 left-1/2 h-[600px] w-[600px] -translate-x-1/2 -translate-y-1/2 bg-[radial-gradient(ellipse,oklch(0.76_0.12_85/5%)_0%,transparent_70%)]"
  >
  </div>

  <div class="reveal relative z-10 mx-auto max-w-2xl">
    <span
      class="text-gold mb-6 block font-mono text-[0.7rem] tracking-[0.3em] uppercase"
    >
      Start Your Journey
    </span>
    <h2
      class="mb-6 font-serif text-[clamp(2rem,4vw,3rem)] leading-tight font-medium tracking-tight"
    >
      Ready to build German wealth <em class="text-gold italic"
        >with expert guidance?</em
      >
    </h2>
    <p class="text-muted-foreground mb-12 text-lg">
      Book a free 30-minute consultation. No obligation, no hard sellâ€”just
      honest assessment of your options.
    </p>

    <form
      id="cta-form"
      class="mx-auto mb-8 grid max-w-3xl grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-[1fr_1fr_1fr_auto]"
    >
      <input
        type="text"
        placeholder="Your Name"
        required
        class="bg-card border-gold-dim text-foreground focus:border-gold placeholder:text-subtle border p-4 font-sans text-sm transition-all duration-300 focus:outline-none"
      />
      <input
        type="email"
        placeholder="Email Address"
        required
        class="bg-card border-gold-dim text-foreground focus:border-gold placeholder:text-subtle border p-4 font-sans text-sm transition-all duration-300 focus:outline-none"
      />
      <input
        type="text"
        placeholder="Current Location"
        required
        class="bg-card border-gold-dim text-foreground focus:border-gold placeholder:text-subtle border p-4 font-sans text-sm transition-all duration-300 focus:outline-none"
      />
      <button
        type="submit"
        class="magnetic bg-gold text-background hover:bg-gold-light cursor-pointer border-none px-8 py-4 font-mono text-sm tracking-[0.1em] uppercase transition-all duration-300 hover:-translate-y-0.5 hover:shadow-[0_10px_30px_oklch(0.76_0.12_85/20%)]"
      >
        Request Consultation
      </button>
    </form>

    <p class="text-subtle font-mono text-[0.7rem]">
      By submitting, you agree to our privacy policy. Your information is never
      shared.
    </p>
  </div>
</section>

<script>
  const form = document.getElementById("cta-form");
  if (form) {
    form.addEventListener("submit", (e) => {
      e.preventDefault();
      const btn = form.querySelector("button");
      if (btn) {
        btn.textContent = "Request Received";
        btn.style.background = "oklch(0.45 0.1 145)"; // Success green
        setTimeout(() => {
          btn.textContent = "Request Consultation";
          btn.style.background = "";
        }, 3000);
      }
    });
  }
</script>
