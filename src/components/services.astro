---
import ServiceCard from "./service-card.astro";

const services = [
  {
    title: "Financing Built for Internationals",
    description:
      "Structured, lender-matched financing support tailored to non-German backgrounds. We speak fluent documentation.",
    features: [
      "Multi-income stream analysis",
      "Residency status optimization",
      "Credit history bridging",
      "Lender network access",
      "Documentation preparation",
    ],
  },
  {
    title: "Curated Investor-Grade Portfolio",
    description:
      "Pre-vetted properties selected for fundamentals, not hype. Each property meets our strict criteria for cashflow and risk.",
    features: [
      "Location demand analysis",
      "Cashflow modeling",
      "Risk profiling",
      "Tenant quality assessment",
      "Exit strategy mapping",
    ],
  },
  {
    title: "End-to-End Execution",
    description:
      "From sourcing to due diligence to ongoing management. Stay passive while we handle the complexity.",
    features: [
      "Property sourcing",
      "Due diligence coordination",
      "Purchase support",
      "Property management setup",
      "Ongoing portfolio oversight",
    ],
  },
];
---

<section id="services" class="bg-card">
  <div class="container space-y-16">
    <div class="reveal space-y-4 text-center">
      <p class="tagline">Our Expertise</p>
      <h2 class="heading-2">
        Three pillars of <em class="text-gold italic">complete guidance</em>
      </h2>
      <div class="gold-line"></div>
    </div>

    <div
      class="bg-gold-dim border-gold-dim grid grid-cols-1 gap-px border md:grid-cols-2 lg:grid-cols-3"
    >
      {services.map((service) => <ServiceCard {...service} />)}
    </div>
  </div>
</section>
