---
import { DiamondIcon } from "@phosphor-icons/react";

const comparisons = [
  {
    feature: "International Financing Expertise",
    humelixa: "Specialized",
    others: "Limited",
  },
  {
    feature: "Off-Market Property Access",
    humelixa: "Extensive Network",
    others: "Portal Only",
  },
  {
    feature: "End-to-End Coordination",
    humelixa: "Full Service",
    others: "Transactional",
  },
  {
    feature: "Passive Management Options",
    humelixa: "Available",
    others: "Not Offered",
  },
  {
    feature: "Multi-Language Support",
    humelixa: "EN/DE/AR/CN",
    others: "German Only",
  },
];
---

<section id="comparison" class="bg-card">
  <div class="container">
    <div class="reveal space-y-4 text-center">
      <p class="tagline">The Difference</p>
      <h2 class="heading-2 mx-auto max-w-4xl">
        Why international professionals <em class="text-gold italic"
          >choose Humelixa</em
        >
      </h2>
      <div class="gold-line"></div>
    </div>

    <table
      class="border-gold-dim reveal mx-auto mt-16 w-full border lg:max-w-5xl"
    >
      <thead
        class="border-gold-dim bg-popover hidden border-b md:table-header-group"
      >
        <tr>
          <th
            scope="col"
            class="p-6 text-left font-mono text-xs tracking-widest text-neutral-200 uppercase"
          >
            Capability
          </th>
          <th
            scope="col"
            class="text-gold p-6 text-left font-mono text-xs tracking-widest uppercase"
          >
            Humelixa
          </th>
          <th
            scope="col"
            class="p-6 text-left font-mono text-xs tracking-widest text-neutral-200 uppercase"
          >
            Traditional Agents
          </th>
        </tr>
      </thead>
      <tbody>
        {
          comparisons.map((row) => (
            <tr class="border-gold-dim block border-b last:border-b-0 md:table-row">
              <th
                scope="row"
                class="bg-popover border-gold-dim block border-b p-6 text-left text-sm font-normal text-neutral-300 md:table-cell md:border-b-0 md:bg-transparent"
              >
                {row.feature}
              </th>
              <td class="flex items-center gap-2 p-6 text-sm">
                <span class="font-mono text-xs text-neutral-300 uppercase md:hidden">
                  Humelixa:
                </span>
                <DiamondIcon weight="fill" size={8} className="text-gold" />
                {row.humelixa}
              </td>
              <td class="border-gold-dim flex items-center gap-2 border-b p-6 text-sm md:table-cell md:border-b-0">
                <span class="font-mono text-xs text-neutral-300 uppercase md:hidden">
                  Others:
                </span>
                <span class="text-neutral-400">â—‹</span>
                {row.others}
              </td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>
</section>
