    rent: "€1,950",
    location: "MUNICH — SCHWABING",
    title: "Historic Altbau Apartment",
    size: "78 m²",
    rooms: "2 Zimmer",
    year: "Baujahr 1923",
    tags: ["Stable Tenant", "Prime Location", "Metro Access"],
  },
  {
    badge: "RENTAL YIELD: 5.2%",
    price: "€320,000",
    rent: "€1,390",
    location: "FRANKFURT — NORDEND",
    title: "Modernized Altbau with Balcony",
    size: "65 m²",
    rooms: "2 Zimmer",
    year: "Baujahr 1910",
    tags: ["Recently Renovated", "Garden Access", "S-Bahn Nearby"],
