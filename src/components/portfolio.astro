<section class="bg-background px-8 py-32" id="portfolio">
  <div class="reveal mb-20 text-center">
    <span
      class="text-gold mb-4 block font-mono text-[0.7rem] tracking-[0.3em] uppercase"
    >
      03 — Curated Properties
    </span>
    <h2
      class="mx-auto max-w-3xl font-serif text-[clamp(2rem,4vw,3rem)] leading-tight font-medium tracking-tight"
    >
      Investment-grade opportunities <em class="text-gold italic"
        >ready for acquisition</em
      >
    </h2>
    <div class="gold-line mt-6"></div>
  </div>

  <div
    class="mx-auto grid max-w-6xl grid-cols-1 gap-8 lg:grid-cols-2 xl:grid-cols-3"
  >
    {properties.map((property) => <PropertyCard {...property} />)}
  </div>
</section>
