---
import FooterLinkSection from "./footer-link-section.astro";

const footerLinks = {
  navigate: [
    { label: "Services", href: "#services" },
    { label: "The Challenge", href: "#narrative" },
    { label: "Client Stories", href: "#testimonials" },
    { label: "Process", href: "#process" },
    { label: "Contact", href: "#consultation" },
  ],
  services: [
    { label: "Financing Support", href: "#services" },
    { label: "Property Sourcing", href: "#services" },
    { label: "Due Diligence", href: "#services" },
    { label: "Property Management", href: "#services" },
  ],
  company: [
    { label: "About Us", href: "#narrative" },
    { label: "Case Studies", href: "#testimonials" },
    { label: "Our Process", href: "#process" },
    { label: "Get Started", href: "#consultation" },
  ],
};
---

<footer class="bg-card border-gold-dim border-t">
  <div class="container pt-16! pb-0!">
    <div
      class="border-gold-dim grid grid-cols-1 gap-16 border-b pb-12 md:grid-cols-2 lg:grid-cols-[2fr_1fr_1fr_1fr]"
    >
      <!-- Brand -->
      <div class="max-w-xs space-y-4">
        <h2 class="font-serif text-2xl font-medium">
          Humelixa<span class="text-gold">.</span>
        </h2>
        <p class="text-sm leading-relaxed text-neutral-400">
          Investment property consulting for international professionals in
          Germany. From strategy to purchase to hands-off management.
        </p>
      </div>

      <FooterLinkSection title="Navigate" links={footerLinks.navigate} />
      <FooterLinkSection title="Services" links={footerLinks.services} />
      <FooterLinkSection title="Company" links={footerLinks.company} />
    </div>

    <!-- Bottom Bar -->
    <p class="py-8 text-center font-mono text-xs text-neutral-400">
      &copy;2025 Humelixa. All rights reserved.
    </p>
  </div>
</footer>
